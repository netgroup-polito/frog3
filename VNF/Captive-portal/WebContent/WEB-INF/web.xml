<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:web="http://java.sun.com/xml/ns/javaee" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <display-name>hibernate</display-name>
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
<!--
  No idea why those filters are needed. However, if we cancel them,
  users are no longer able to log in.
-->
  <filter>
    <filter-name>one</filter-name>
    <filter-class>filter.initFilter</filter-class>
  </filter>
<!--
  <filter>
    <filter-name>two</filter-name>
    <filter-class>filter.LoginFilter</filter-class>
  </filter>
-->
  <filter-mapping>
    <filter-name>one</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
<!--
  <filter-mapping>
    <filter-name>two</filter-name>
    <url-pattern>/index.jsp</url-pattern>
    <url-pattern>/Logout.html</url-pattern>
  </filter-mapping>
-->
 <servlet>
	<servlet-name>login</servlet-name>
	<jsp-file>/login.jsp</jsp-file>
 </servlet>

 <servlet-mapping>
	<servlet-name>login</servlet-name>
	<url-pattern>/login.jsp</url-pattern>
 </servlet-mapping>

<servlet>  
      <servlet-name>CommonServlet</servlet-name>  
      <servlet-class>utils.resourcesDispatcher.CommonServlet</servlet-class>
</servlet> 

<servlet-mapping>  
        <servlet-name>CommonServlet</servlet-name>  
        <url-pattern>/images/*</url-pattern> 
	<url-pattern>/css/*</url-pattern>
	<url-pattern>/confrouter.htm</url-pattern>
	<url-pattern>/js/*</url-pattern>
	<url-pattern>/register.htm</url-pattern>
</servlet-mapping> 

 <servlet>
	<servlet-name>index</servlet-name>
	<jsp-file>/index.jsp</jsp-file>
 </servlet>

 <servlet-mapping>
	<servlet-name>index</servlet-name>
	<url-pattern>/*</url-pattern>
 </servlet-mapping>

</web-app>
